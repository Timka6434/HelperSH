@model test_indentity.Models.Consumable

@{
    ViewData["Title"] = "Редактирование расходного материала";
}

<h2 class="text-center">Редактирование расходного материала</h2>
<hr class="my-4" style="border-top: 1px solid #ccc;">
<form asp-action="Edit" method="post">
    <div class="form-group">
        <label asp-for="Name">Наименование</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description">Описание</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity">Количество</label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Отмена</a>
</form>
