@model test_indentity.ViewModels.LoginVM

@{
    ViewData["Title"] = "Страница авторизации";
}

<div class="container mt-4 form-group text-center mb-3">
    <div class="jumbotron text-center">
        <h1 class="display-5">Добро пожаловать!</h1>
        <h2 class="lead"> На сайт по подаче заявок на техническое обслуживание</h2>
        <hr class="my-4">
        <p class="lead">Пожалуйста, введите свои учетные данные для входа.</p>
    </div>
</div>

<div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
</div>

<form asp-action="Login" method="post" class="form-control w-50 mx-auto">
    <div class="form-group">
        <label asp-for="UserName">Имя пользователя</label>
        <input asp-for="UserName" class="form-control" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group" class="mb-3">
        <label asp-for="UserPassword">Пароль</label>
        <input asp-for="UserPassword" type="password" class="form-control mb-3" />
        <span asp-validation-for="UserPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary ">Авторизоваться</button>
</form>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
