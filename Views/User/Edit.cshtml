@model test_indentity.ViewModels.EditUserVM

@{
    ViewData["Title"] = "Редактировать пользователя";
    var roles = ViewBag.Roles as List<Microsoft.AspNetCore.Identity.IdentityRole>;
}

<h2 class="text-center">Редактировать пользователя</h2>

<form asp-action="Edit" method="post" class="form-container">
    <input type="hidden" asp-for="UserId" />
    <div class="form-group">
        <label asp-for="UserName"></label>
        <input asp-for="UserName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label>Роль</label>
        <select asp-for="SelectedRole" asp-items="@(new SelectList(roles, "Name", "Name"))" class="form-control"></select>
    </div>
    <div class="form-group">
        <label asp-for="NewPassword"></label>
        <input asp-for="NewPassword" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Сохранить</button>
    <a asp-action="Index" class="btn btn-secondary mt-2">Отмена</a>
</form>
