@model test_indentity.ViewModels.RequestCreateVM

@{
    ViewData["Title"] = "Подать заявку";
}

<h2 class="text-center">Страница подачи заявки</h2>
<hr class="my-4" style="border-top: 1px solid #ccc;">
<form asp-action="Create" method="post">
    <div class="d-grid gap-2 col-6 mx-auto">
        <div class="form-group">
            <label asp-for="Description">Описание</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Urgency">Срочность</label>
            <select asp-for="Urgency" class="form-control">
                <option value="обычная">обычная</option>
                <option value="срочная">срочная</option>
            </select>
            <span asp-validation-for="Urgency" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TypeTechnology">Тип техники</label>
            <select asp-for="TypeTechnology" class="form-control">
                <option value="">-- Выберите технику --</option>
                <option value="Персональный Компьютер">Персональный Компьютер</option>
                <option value="Проектор">Проектор</option>
                <option value="Принтер">Принтер</option>
                <option value="Интерактивная панель">Интерактивная панель</option>
            </select>
        </div>
        <div class="form-group">
            <label asp-for="RoomId">Кабинет</label>
            <select asp-for="RoomId" class="form-control">
                <option value="">-- Выберите кабинет --</option>
                @foreach (var room in Model.Rooms)
                {
                    <option value="@room.CabinetId">@room.FullCabinetName</option>
                }
            </select>
            <span asp-validation-for="RoomId" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary ">Отправить</button>
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
