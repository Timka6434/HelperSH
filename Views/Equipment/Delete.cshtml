@model test_indentity.Models.Equipment

@{
    ViewData["Title"] = "Удаление оборудования";
}

<h1 class="text-center">Удаление оборудования</h1>
<hr class="my-4" style="border-top: 1px solid #ccc;">
<h3>Вы уверены что хотите удалить это оборудование?</h3>
<div>
    <h4>оборудование</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Наименование
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Инвентарный номер
        </dt>
        <dd class="col-sm-10">
            @Model.InventoryNumber
        </dd>
        <dt class="col-sm-2">
            Место установки
        </dt>
        <dd class="col-sm-10">
            @Model.Location
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Подтвердить удаление" class="btn btn-danger" />
    </form>

        <a asp-action="Index" class="btn btn-secondary mt-2">Отмена</a>

</div>
